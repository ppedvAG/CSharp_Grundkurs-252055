<Window x:Class="M014.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M014"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300"
		WindowStartupLocation="CenterScreen"
		Topmost="True">
	<!--Ansicht -> Toolbox, Ansicht -> Eigenschaftenfenster-->
	<StackPanel>
		<!--Aufgabe: Textfeld mit einem Zähler, Button erhöht den Zähler um 1-->
		<!--Name: Ermöglicht Zugriff im Backend auf diese GUI-Komponente-->
		<TextBlock Name="Textfeld" FontSize="20" TextAlignment="Center" Margin="10" Text="Zahl: 0"/>
		<Button Content="Button" HorizontalAlignment="Center"
				VerticalAlignment="Top" Width="200" FontSize="20" Background="LightGreen" Click="Button_Click"/>
		
		<!--ComboBox: Dropdown; Auswahl von einem Element aus einer Liste-->
		<!--Aufgabe: Ausgewählte Zahl in dem Textfeld anzeigen-->
		<ComboBox Name="Dropdown" SelectionChanged="Dropdown_SelectionChanged"/>
		<ComboBox Name="Wochentage"/>
		
		<!--ListBox: Liste von Elementen, die alle selektierbar sind-->
		<ListBox Name="LB" SelectionChanged="ListBox_SelectionChanged" SelectionMode="Extended"/>

		<CheckBox Content="Hallo" IsChecked="{x:Null}"/>

		<RadioButton Content="Radio 1" GroupName="RB"/>
		<RadioButton Content="Radio 2" GroupName="RB"/>
		<RadioButton Content="Radio 3" GroupName="RB"/>

		<!--Menu: Menüleiste-->
		<!--Befüllt mit verschachtelten MenuItems-->
		<!--Sollte am obersten Ende der XAML-Datei definiert werden-->
		<Menu>
			<MenuItem Header="Datei">
				<MenuItem Header="Neu">
					<MenuItem Header="Projekt" Click="Button_Click"/>
				</MenuItem>
				<MenuItem Header="Öffnen"/>
				<MenuItem Header="Speichern"/>
				<MenuItem Header="Beenden"/>
			</MenuItem>
			<MenuItem Header="Bearbeiten"/>
			<MenuItem Header="Ansicht"/>
		</Menu>

		<!--ProgressBar: Zeigt einen Fortschritt an (mit Min, Max und Value)-->
		<ProgressBar Height="20" Minimum="0" Maximum="100" Value="50">
			<ProgressBar.Foreground>
				<LinearGradientBrush>
					<GradientStop Color="LightGreen" Offset="0"/>
					<GradientStop Color="Red" Offset="1"/>
				</LinearGradientBrush>
			</ProgressBar.Foreground>
		</ProgressBar>
	</StackPanel>
</Window>
